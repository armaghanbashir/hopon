<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finding_ride"
    android:background="@color/gay">
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraZoom="12"
        mapbox:mapbox_cameraTargetLat="33.684476"
        mapbox:mapbox_cameraTargetLng="72.987222" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="450dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#FFF"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/rideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCHING RIDES"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gay"/>
    </RelativeLayout>
</RelativeLayout>